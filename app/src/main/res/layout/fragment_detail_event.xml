<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginHorizontal="16dp"
    tools:context=".ui.explore.event.detailevent.DetailEventFragment">

    <TextView
        android:id="@+id/tv_title_event"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mengenali Risiko Diabetes Sejak Dini"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/md_theme_onSurface"
        android:lineSpacingExtra="0sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_event_organizer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:contentPaddingTop="6dp"
        app:contentPaddingBottom="6dp"
        app:contentPaddingLeft="12dp"
        app:contentPaddingRight="12dp"
        android:elevation="0dp"
        app:strokeWidth="0dp"
        app:cardCornerRadius="4dp"
        android:layout_marginTop="22dp"
        android:backgroundTint="@color/md_theme_primary"
        app:layout_constraintTop_toBottomOf="@id/tv_title_event"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/tv_event_organizer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Universitas Mataram"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/md_theme_onPrimary"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="6sp"
            tools:ignore="SmallSp" />

    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="276dp"
        app:layout_constraintTop_toBottomOf="@id/card_event_organizer"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/img_event"
        android:scaleType="centerCrop"
        android:layout_marginTop="16dp"/>





</androidx.constraintlayout.widget.ConstraintLayout>